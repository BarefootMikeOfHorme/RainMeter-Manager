* text=auto

# Normalize line endings for scripts
*.sh eol=lf
*.ps1 eol=crlf
*.bat eol=crlf

# Prefer C/C++-aware diffs
*.c  diff=cpp
*.cc diff=cpp
*.cpp diff=cpp
*.cxx diff=cpp
*.h  diff=cpp
*.hh diff=cpp
*.hpp diff=cpp

# Binary files (no diffs)
*.png binary
*.ico binary
*.exe binary
*.dll binary
*.lib binary
*.pdb binary

# Git LFS for large archives (track backups and large blobs)
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar.gz filter=lfs diff=lfs merge=lfs -text
*.tgz filter=lfs diff=lfs merge=lfs -text

