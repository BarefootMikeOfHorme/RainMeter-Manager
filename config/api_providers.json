          "storage": "encrypted_dpapi"
        },
        "rate_limits": {
          "free_tier": {
            "requests_per_minute": 50,
            "monthly_limit": 10000
          },
          "paid_tiers": {
            "analyst": "500 requests/minute",
            "pro": "500 requests/minute", 
            "enterprise": "1000 requests/minute"
          }
        },
        "legal": {
          "license": "Custom API Terms",
          "terms_url": "https://www.coingecko.com/en/api_terms",
          "attribution_required": true,
          "attribution_text": "Cryptocurrency data provided by CoinGecko",
          "commercial_use": "allowed"
        },
        "security": {
          "https_required": true,
          "domain_validation": true,
          "whitelist_domains": ["api.coingecko.com"],
          "timeout_ms": 10000,
