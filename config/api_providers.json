      "coinmarketcap": {
        "name": "CoinMarketCap",
        "description": "Cryptocurrency market data and rankings",
        "api_version": "v1",
        "base_url": "https://pro-api.coinmarketcap.com/v1/",
        "endpoints": {
          "listings": "cryptocurrency/listings/latest",
          "quotes": "cryptocurrency/quotes/latest?symbol={symbols}",
